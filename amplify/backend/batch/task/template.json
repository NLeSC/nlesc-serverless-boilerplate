{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Batch job resource stack",
    "Parameters": {
        "env": {
            "Type": "String"
        },
        "taskComputeDefinition": {
            "Type": "String",
            "Default": "nlesc-computedefinition"
        },
        "taskJobQueue": {
            "Type": "String",
            "Default": "nlesc-jobqueue"
        },
        "taskImageName": {
            "Description": "Docker image name for job, repo name will be prepended and environment appended",
            "Type": "String"
        },
        "taskMemory": {
            "Description": "The hard limit (in MiB) of memory to present to the container",
            "Type": "Number"
        },
        "taskVcpus": {
            "Description": "The number of vCPUs reserved for the container",
            "Type": "Number"
        },
        "taskJobDefinition": {
            "Type": "String",
            "Default":"nlesc-task-jobdefinition"
        },
        "taskSubnets": {
            "Description": "VPC Subnets form Batch compute environment",
            "Type": "List<AWS::EC2::Subnet::Id>"
        },
        "taskComputeEnvironmentSecurityGroupId": {
            "Type": "AWS::EC2::SecurityGroup::Id",
            "Description": "Security group in which Docker container will run"
        },
        "apinlescGraphQLAPIIdOutput": {
            "Type": "String",
            "Default": "apinlescGraphQLAPIIdOutput"
        },
        "apinlescGraphQLAPIEndpointOutput": {
            "Type": "String",
            "Default": "apinlescGraphQLAPIEndpointOutput"
        }
    },
    "Resources": {
        "InstanceRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {
                    "Fn::Join": [
                        "",
                        [
                            "nlescTaskInstanceRole",
                            "-",
                            {
                                "Ref": "env"
                            }
                        ]
                    ]
                },
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ec2.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/service-role/AmazonEC2ContainerServiceforEC2Role"
                ]
            }
        },
        "InstanceRoleProfile": {
            "Type": "AWS::IAM::InstanceProfile",
            "Properties": {
                "InstanceProfileName": {
                    "Fn::Join": [
                        "",
                        [
                            "nlescTaskInstanceProfile",
                            "-",
                            {
                                "Ref": "env"
                            }
                        ]
                    ]
                },
                "Roles": [
                    {
                        "Ref": "InstanceRole"
                    }
                ]
            }
        },
        "ServiceRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {
                    "Fn::Join": [
                        "",
                        [
                            "nlescTaskServiceRole",
                            "-",
                            {
                                "Ref": "env"
                            }
                        ]
                    ]
                },
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "batch.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/service-role/AWSBatchServiceRole"
                ]
            }
        },
        "ComputeEnvironment": {
            "Type": "AWS::Batch::ComputeEnvironment",
            "Properties": {
                "ComputeEnvironmentName": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "taskComputeDefinition"
                            },
                            "-",
                            {
                                "Ref": "env"
                            }
                        ]
                    ]
                },
                "ComputeResources": {
                    "Type": "EC2",
                    "MinvCpus": 0,
                    "MaxvCpus": 16,
                    "DesiredvCpus": 0,
                    "Subnets": {
                        "Ref": "taskSubnets"
                    },
                    "InstanceRole": {
                        "Ref": "InstanceRoleProfile"
                    },
                    "InstanceTypes": [
                        "optimal"
                    ],
                    "SecurityGroupIds": [
                        {
                            "Ref": "taskComputeEnvironmentSecurityGroupId"
                        }
                    ]
                },
                "Type": "MANAGED",
                "ServiceRole": {
                    "Ref": "ServiceRole"
                },
                "State": "ENABLED"
            }
        },
        "JobQueue": {
            "Type": "AWS::Batch::JobQueue",
            "Properties": {
                "JobQueueName": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "taskJobQueue"
                            },
                            "-",
                            {
                                "Ref": "env"
                            }
                        ]
                    ]
                },
                "State": "ENABLED",
                "Priority": 1,
                "ComputeEnvironmentOrder": [
                    {
                        "Order": 1,
                        "ComputeEnvironment": {
                            "Ref": "ComputeEnvironment"
                        }
                    }
                ]
            }
        },
        "ImageRepository": {
            "Type": "AWS::ECR::Repository",
            "Properties": {
                "RepositoryName": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "taskImageName"
                            },
                            "-",
                            {
                                "Ref": "env"
                            }
                        ]
                    ]
                }
            }
        },
        "BatchJobRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {
                            "Fn::Join": [
                                "",
                                [
                                    "nlescTaskBatchJobRole",
                                    "-",
                                    {
                                        "Ref": "env"
                                    }
                                ]
                            ]
                },
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ecs-tasks.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                }
            }
        },
        "BatchJobPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "amplify-batch-instance-policy",
                "Roles": [
                    {
                        "Ref": "BatchJobRole"
                    }
                ],
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": [
                                "appsync:Get*",
                                "appsync:List*",
                                "appsync:Update*"
                            ],
                            "Resource": [
                                {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:appsync:",
                                            {
                                                "Ref": "AWS::Region"
                                            },
                                            ":",
                                            {
                                                "Ref": "AWS::AccountId"
                                            },
                                            ":apis/",
                                            {
                                                "Ref": "apinlescGraphQLAPIIdOutput"
                                            }
                                        ]
                                    ]
                                }
                            ]
                        },
                        {
                            "Effect": "Allow",
                            "Action": [
                                "dynamodb:GetItem",
                                "dynamodb:UpdateItem",
                                "dynamodb:BatchGetItem",
                                "dynamodb:Scan"
                            ],
                            "Resource": [
                                {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:dynamodb:",
                                            {
                                                "Ref": "AWS::Region"
                                            },
                                            ":",
                                            {
                                                "Ref": "AWS::AccountId"
                                            },
                                            ":table/JobDescription-",
                                            {
                                                "Ref": "apinlescGraphQLAPIIdOutput"
                                            },
                                            "-",
                                            {
                                                "Ref": "env"
                                            }
                                        ]
                                    ]
                                },
                                {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:dynamodb:",
                                            {
                                                "Ref": "AWS::Region"
                                            },
                                            ":",
                                            {
                                                "Ref": "AWS::AccountId"
                                            },
                                            ":table/Job-",
                                            {
                                                "Ref": "apinlescGraphQLAPIIdOutput"
                                            },
                                            "-",
                                            {
                                                "Ref": "env"
                                            }
                                        ]
                                    ]
                                },
                            ]
                        }
                    ]
                }
            }
        },
        "JobDefinition": {
            "Type": "AWS::Batch::JobDefinition",
            "DependsOn": [
                "ImageRepository"
            ],
            "Properties": {
                "ContainerProperties": {
                    "Image": {
                        "Fn::Join": [
                            "",
                            [
                                {
                                    "Ref": "AWS::AccountId"
                                },
                                ".dkr.ecr.",
                                {
                                    "Ref": "AWS::Region"
                                },
                                ".amazonaws.com/",
                                {
                                    "Ref": "taskImageName"
                                },
                                "-",
                                {
                                    "Ref": "env"
                                },
                                ":latest"
                            ]
                        ]
                    },
                    "Command": [
                        "Ref::jobdescriptionid"
                    ],
                    "JobRoleArn": {
                        "Ref": "BatchJobRole"
                    },
                    "Memory": {
                        "Ref": "taskMemory"
                    },
                    "Vcpus": {
                        "Ref": "taskVcpus"
                    },
                    "Environment": [
                        {
                            "Name": "ENV",
                            "Value": {
                                "Ref": "env"
                            }
                        },
                        {
                            "Name": "REGION",
                            "Value": {
                                "Ref": "AWS::Region"
                            }
                        },
                        {
                            "Name": "API_NLESC_GRAPHQLAPIIDOUTPUT",
                            "Value": {
                                "Ref": "apinlescGraphQLAPIIdOutput"
                            }
                        },
                        {
                            "Name": "API_NLESC_GRAPHQLAPIENDPOINTOUTPUT",
                            "Value": {
                                "Ref": "apinlescGraphQLAPIEndpointOutput"
                            }
                        },
                        {
                            "Name": "API_NLESC_DYNAMODB_TABLE_SUFFIX",
                            "Value": {
                                "Fn::Join": [
                                    "",
                                    [
                                        "-",
                                        {
                                            "Ref": "apinlescGraphQLAPIIdOutput"
                                        },
                                        "-",
                                        {
                                            "Ref": "env"
                                        }
                                    ]
                                ]
                            }
                        }
                    ]
                },
                "JobDefinitionName": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "taskJobDefinition"
                            },
                            "-",
                            {
                                "Ref": "env"
                            }
                        ]
                    ]
                },
                "Type": "container"
            }
        }
    }
}